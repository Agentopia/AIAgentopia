# Web Scraper Agent Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration (for cloud-based scraping)
OPENAI_API_KEY=your_openai_api_key_here

# LLM Model Selection
# Options: gpt-3.5-turbo, gpt-4, ollama/llama3.2
DEFAULT_LLM_MODEL=gpt-3.5-turbo

# Ollama Configuration (for local scraping)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Application Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# Scraping Configuration
DEFAULT_TIMEOUT=30
MAX_RETRIES=3
USER_AGENT=AgentopiaWebScraper/1.0

# Security
ENABLE_API_KEY_VALIDATION=true
REQUIRE_HTTPS_URLS=false
